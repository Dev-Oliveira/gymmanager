            <div class="item">
                <div>Avatar URL</div>
                <input 
                    placeholder="http//:" 
                    type="url" 
                    name="avatar_url"
                    value="{{instructor.avatar_url}}"    
                />
                
            </div>
            <div class="item">
                <div>Instrutor</div>
                <input 
                    placeholder="Nome do instrutor" 
                    type="txt" 
                    name="name"
                    value="{{instructor.name}}"
                />
            </div>
            <div class="item">
                <div>Data de Nascimento</div>
                <input 
                type="date" 
                name="birth"
                value="{{instructor.birth}}"
                />
            </div>
            <div class="item">
                <div>Sexo</div>
               <span> 
                   <input 
                    type="radio" 
                    name="gender" 
                    value="M"
                    {% if instructor.gender == 'M' %}
				        checked
			        {% endif %}
                   /> 
                   Masculino
                </span>
               <span> 
                   <input 
                    type="radio" 
                    name="gender" 
                    value="F" 
                    {% if instructor.gender == 'F' %}
				        checked
			        {% endif %}
                   />
                   Feminino
                </span>
            </div>
            <div class="item">
                <div>Área de atuação</div>
                <input 
                    placeholder="Digite seus serviços separados por vírgula." 
                    type="txt" 
                    name="services"
                    value="{{instructor.services}}"
                />
                
            </div>
            <button type="submit">Salvar</button>